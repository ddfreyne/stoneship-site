<h1><%= @item[:title] %></h1>

<%= yield %>

<div class="hr"></div>

<div class="col-left-sm main-footer">
  <div>Last revised:</div>
  <div class="pb-base"><%= fmt_date(@item[:updated_at]) %></div>
</div>

<div class="col-center-sm main-footer">
  <% if @item[:is_linked_from].any? %>
    <div>Backlinks:</div>
    <ul class="pb-base">
      <% @item[:is_linked_from].map { |id| @items[id] }.sort_by { |i| i[:title] }.each do |note| %>
        <li><%= link_to note[:title], note %></li>
      <% end %>
    </ul>
  <% end %>
</div>
